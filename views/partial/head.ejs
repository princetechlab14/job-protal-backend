<head>
  <meta charset="UTF-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
  />
  <title><%= title %></title>
  <!-- SweetAlert JS -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

  <!-- Tailwind CSS -->
  <link
    href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
    rel="stylesheet"
  />
  <!-- FontAwesome for icons -->
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    rel="stylesheet"
  />
  <!-- DataTables CSS -->
  <link
    href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css"
    rel="stylesheet"
  />
  <style>
    /* Custom DataTables styles */

    /* Table styles */
    #employeeTable {
      width: 100%;
      border-collapse: collapse;
    }

    /* Table header */
    #employeeTable thead th {
      background-color: #1f2937;
      color: #ffffff;
      padding: 0.75rem;
      text-align: left;
      font-size: 0.75rem;
      text-transform: uppercase;
      font-weight: 500;
      letter-spacing: 0.05em;
    }

    /* Table body */
    #employeeTable tbody td {
      padding: 0.75rem;
      font-size: 0.875rem;
      color: #4a5568;
    }

    /* Alternating row colors */
    #employeeTable tbody tr:nth-child(even) {
      background-color: #f7fafc;
    }

    /* Hover effect */
    #employeeTable tbody tr:hover {
      background-color: #edf2f7;
    }

    /* Pagination button styles */
    .dataTables_wrapper .dataTables_paginate .paginate_button {
      color: #4a5568 !important;
      border: 1px solid #e2e8f0;
      background-color: #fff;
      padding: 0.5rem 0.75rem;
      margin: 0 0.25rem;
      border-radius: 0.375rem;
      transition: all 0.3s ease;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
      background-color: #edf2f7;
      border-color: #cbd5e0;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
      color: #fff !important;
      background-color: #1f2937;
      border-color: #1f2937;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
      color: #a0aec0 !important;
      background-color: #e2e8f0;
      border-color: #e2e8f0;
    }
    /* Base styles */
    .sidebar-link:hover {
      background-color: rgba(0, 0, 0, 0.2);
    }
    .sidebar-link.active {
      background-color: rgba(0, 0, 0, 0.4);
    }
    /* Close button styles */
    .close-sidebar {
      display: none; /* Initially hide on all screens */
      position: absolute;
      top: 0;
      right: 3px;
      background-color: rgba(0, 0, 0, 0.2);
      padding-left: 15px;
      padding-right: 15px;
      cursor: pointer;
      border-radius: 15px;
      margin-top: 5px;
    }
    .close-sidebar i {
      color: white;
    }

    /* Popup styles */
    .popup {
      display: none; /* Initially hide popup */
      position: absolute;
      right: -15px;
      top: 4rem;
      z-index: 1000;
      width: 180px;
      background-color: #ffffff;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }
    .popup-link {
      display: block;
      padding: 10px 20px;
      color: #333333;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }
    .popup-link:hover {
      background-color: #f3f4f6;
    }
    .popup-link.logout {
      color: #e53e3e; /* Red color for logout link */
    }
    .popup-link i {
      margin-right: 8px;
    }
  </style>

  <!-- FontAwesome Script -->
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function () {
      // Toggle sidebar open/close
      $("#sidebar-toggle").on("click", function () {
        $("#sidebar").toggleClass("-translate-x-full");
      });

      // Toggle user popup
      $("#user-popup-toggle").on("click", function (e) {
        e.stopPropagation(); // Prevent closing sidebar
        $("#user-popup").toggle();
      });

      // Close sidebar when clicking outside or on links
      $(document).on("click", function (e) {
        if (!$(e.target).closest("#sidebar, #user-popup-toggle").length) {
          $("#user-popup").hide();
        }
      });

      // Close sidebar when a link is clicked
      $("#sidebar a").on("click", function () {
        $("#sidebar").toggleClass("-translate-x-full");
      });

      // Close sidebar when close button is clicked
      $("#close-sidebar").on("click", function () {
        $("#sidebar").toggleClass("-translate-x-full");
      });
    });
  </script>
</head>
