<!DOCTYPE html>
<html lang="en">
  <%- include("./partial/head",{title:title}) %>
  <body class="bg-gray-100 dark:bg-gray-900 font-sans">
    <!-- Sidebar -->
    <%- include("./partial/sidebar") %>
    <!-- Main Content -->
    <div class="ml-0 md:ml-64 flex flex-col min-h-screen">
      <!-- Header -->
      <%- include("./partial/header") %>
      <!-- Main Content Area -->
      <main class="flex-1 p-6 dark:bg-gray-800">
        <div class="container mx-auto">
          <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-200">
            Dashboard
          </h2>
          <div class="grid gap-6 mt-4 md:grid-cols-2 xl:grid-cols-3">
            <!-- Total Employees Card -->
            <a
              href="/admin/employee"
              class="block bg-white p-6 rounded-lg shadow-md dark:bg-gray-700 hover:bg-gray-50 transition duration-300"
            >
              <div class="flex items-center">
                <div class="p-3 rounded-full bg-blue-200">
                  <i class="fas fa-user text-blue-500"></i>
                </div>
                <div class="ml-4">
                  <p
                    class="text-lg font-semibold text-gray-700 dark:text-gray-200"
                  >
                    Total Employees
                  </p>
                  <p class="text-gray-500 dark:text-gray-300">
                    <%= totalEmployees %>
                  </p>
                </div>
              </div>
            </a>

            <!-- Total Employers Card -->
            <a
              href="/admin/employer"
              class="block bg-white p-6 rounded-lg shadow-md hover:bg-gray-50 transition duration-300"
            >
              <div class="flex items-center">
                <div class="p-3 rounded-full bg-yellow-200">
                  <i class="fas fa-building text-yellow-500"></i>
                </div>
                <div class="ml-4">
                  <p
                    class="text-lg font-semibold text-gray-700 dark:text-gray-200"
                  >
                    Total Employers
                  </p>
                  <p class="text-gray-500 dark:text-gray-300">
                    <%= totalEmployers %>
                  </p>
                </div>
              </div>
            </a>

            <!-- Total Applied Jobs Card -->
            <div
              class="bg-white p-6 rounded-lg hover:bg-gray-50 shadow-md dark:bg-gray-700"
            >
              <div class="flex items-center">
                <div class="p-3 rounded-full bg-green-200">
                  <i class="fas fa-briefcase text-green-500"></i>
                </div>
                <div class="ml-4">
                  <p
                    class="text-lg font-semibold text-gray-700 dark:text-gray-200"
                  >
                    Total Applied Jobs
                  </p>
                  <p class="text-gray-500 dark:text-gray-300">
                    <%= totalAppliedJobs %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Footer -->
    <%- include("./partial/footer") %>
  </body>
</html>
